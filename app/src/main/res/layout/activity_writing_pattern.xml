<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadeScrollbars="false"
    android:scrollbarStyle="outsideOverlay"
    android:background="@color/splash_background"
    android:theme="@style/CustomScrollbarStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splash_background"
        android:padding="16dp"
        tools:context=".WritingPatternActivity">

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write this paragraph:"
            android:textSize="18sp"
            android:textColor="@color/textcolor"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/paragraphText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructionText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/scanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Your Writing"
            android:layout_below="@id/paragraphText"
            android:backgroundTint="@color/buttoncolor"
            android:textColor="@color/buttontext"/>

        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/scanButton"
            android:layout_marginTop="16dp"
            android:background="#E8E8E8">

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"/>

            <ImageView
                android:id="@+id/scannedImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:visibility="gone"/>

        </FrameLayout>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageContainer"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:lineSpacingExtra="8dp"/>

    </RelativeLayout>
</ScrollView>